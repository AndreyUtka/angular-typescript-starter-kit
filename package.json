{
  "name": "angular-typescript-starter-kit",
  "version": "1.0.0",
  "description": "starter kit which based on rollup/es6/typescript/angular1.x/scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndreyUtka/angular-typescript-starter-kit.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist && mkdir -p ./dist/build/ && touch ./dist/build/templates.js",
    "pre-start": "npm run clean && npm run notify",
    "start": "BUILD_TYPE='start' npm run pre-start && npm run build:dev && npm run dev:watch",
    "build": "BUILD_TYPE='prod' npm run pre-start && npm run build:prod",
    "build:pre-build": "npm run build:tpl && npm run build:vendor && npm run angular-tpl:build",
    "build:dev": "npm run build:pre-build && npm run build:ts && npm run lint",
    "build:prod": "npm run build:pre-build && npm run build:ts-prod && npm run rollup:prod && npm run scss:build",
    "build:ts": "tsc -p tsconfig.dev.json",
    "build:ts-prod": "tsc -p tsconfig.prod.json",
    "build:tpl": "node build-process/build-tpl.js",
    "build:vendor": "node build-process/make-vendor.js",
    "dev:watch": "npm run lint:watch & npm run dev:ts & npm run rollup:dev & npm run scss:dev & npm run server:run & npm run angular-tpl:dev & wait",
    "dev:ts": "npm run build:ts -- --watch",
    "angular-tpl:dev": "onchange 'src/**/*.html' -- npm run angular-tpl:build",
    "angular-tpl:build": "nghtml2js -m 'ng-ts-starterkit.templates' -s browser -f 'src/**/*.html' -p src/ -o dist/build/templates.js",
    "rollup:dev": "rollup -c build-process/rollup.config.dev.js --watch",
    "rollup:prod": "rollup -c build-process/rollup.config.prod.js",
    "scss:build": "node-sass src/ -o dist/build/ --output-style compressed",
    "scss:dev": "npm run scss:build -- -w",
    "notify": "node build-process/notify.js",
    "lint:watch": "onchange 'src/**/*.tsx' -d 5000 -- npm run lint",
    "lint": "tslint src/**/*.ts --force --format stylish",
    "server:run": "node server/app.js",
    "test": "npm run clean && npm run angular-tpl:build && NODE_ENV=test jest --config jest.config.json",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --no-cache --coverage"
  },
  "bugs": {
    "url": "https://github.com/AndreyUtka/angular-typescript-starter-kit/issues"
  },
  "homepage": "https://github.com/AndreyUtka/angular-typescript-starter-kit#readme",
  "dependencies": {
    "@types/angular": "1.6.17",
    "angular": "1.6.4",
    "angular-template-cache": "1.2.0",
    "chalk": "1.1.3",
    "concat": "1.0.3",
    "node-sass": "4.5.3",
    "pug": "2.0.0-rc.1",
    "rimraf": "2.6.1",
    "rollup": "0.41.6",
    "rollup-plugin-commonjs": "8.0.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "tslib": "1.7.1",
    "typescript": "2.3.3",
    "uglify-js": "3.0.10"
  },
  "devDependencies": {
    "@types/angular-mocks": "1.5.9",
    "@types/jest": "19.2.3",
    "angular-mocks": "1.6.4",
    "browser-sync": "2.18.12",
    "jest": "20.0.3",
    "onchange": "3.2.1",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-watch": "3.2.2",
    "stylelint": "7.10.1",
    "ts-jest": "20.0.4",
    "tslint": "5.3.2"
  }
}
