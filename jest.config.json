{
  "transform": {
    ".ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "mapCoverage": true,
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/spec.config.ts"
  ],
  "testRegex": "src/.*.spec.(ts|tsx|js)$",
  "setupTestFrameworkScriptFile": "<rootDir>/src/spec.config.ts",
  "moduleFileExtensions": [
    "js",
    "ts"
  ]
}
